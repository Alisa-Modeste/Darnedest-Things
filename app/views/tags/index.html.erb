<h2>Browse by Tag</h2>
<div id="tagcloud">
  <% @tags.each_with_index do |tag, i| %>
    <a href="<%= tag_url(tag.id) %>" rel=" <%= tag.questions.length %> "><%= tag.name %></a>
  <% end %>
  
</div>

<%= paginate @tags %>


<script>
$(document).ready(function(){
  $.fn.tagcloud.defaults = {
    size: {start: 14, end: 38, unit: 'pt'},
    color: {start: '#cde', end: '#f52'}
  };


    $('#tagcloud a').tagcloud();


});
</script>