<form method="post" action="<%= search_url %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
   Search for an Answer
    <input type="text" name="search" id="search">
  </label>

  <label>
    Tags
    <input type="text" name="search_tags" id="search_tags">
  </label>

  <label>
    Check if you want only want questions with all tags
    <input type="checkbox" name="all_tags" id="all_tags" value="true">
  </label>

  <input type="submit">
</form>

<%
    tags = Tag.all.map do |tag|
      tag.name
    end
%>
<script type="application/json" id="bootstrapped_tags"><%= tags.join(', ') %></script>