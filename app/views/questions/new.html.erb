<form class="ask-question" method="post" action="<%= questions_url %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Title
    <input type="text" name="question[title]">
  </label>

  <label>
    Details
    <textarea cols="100" rows="30" name="question[body]"></textarea>
  </label>

  <label>
    Tags
    <input type="text" name="question_tags" id="question_tags">
  </label>

  <input type="submit">

</form>

<script type="application/json" id="bootstrapped_tags"><%= @tags.join(', ') %></script>
