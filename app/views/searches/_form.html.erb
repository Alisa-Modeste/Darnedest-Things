<form method="post" action="<%= search_url %>" id='search'>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h2>Search for an Answer</h2>

    <input type="text" name="search" id="search">

<br><br>
  <label>
    Tags
    <br>
    <input type="text" name="search_tags" id="search_tags">
  </label>
<br>
  <label>
    <input type="checkbox" name="all_tags" id="all_tags" value="true">
    Only return questions with all the tags
  </label>

  <br>
  <input type="submit">
</form>

<%
    tags = Tag.all.map do |tag|
      tag.name
    end
%>
<script type="application/json" id="bootstrapped_tags"><%= tags.join(', ') %></script>